{
  "name": "superfuse-forge",
  "description": "A developer-friendly framework/library in solidity to modify & deploy cross-chain=based contracts in a modular style.",
  "version": "0.0.5",
  "homepage": "https://github.com/Ratimon/superfuse-forge#readme",
  "keywords": [
    "blockchain",
    "ethereum",
    "library",
    "smart-contracts",
    "solidity"
  ],
  "files": [
    "script/",
    "src/",
    "test/",
    "LICENSE",
    "README.md",
    "foundry.toml",
    "remappings.txt",
    "LICENSE"
  ],
  "license": "MIT",
  "repository": "github:Ratimon/superfuse-forge",
  "author": {
    "name": "Rati Montreewat",
    "url": "https://github.com/Ratimon/superfuse-forge"
  },
  "scripts": {
    "---------------------- USER WORKFLOW ----------------------": "",
    "postinstall": "forge install --no-git forge-std-v1.9.1=foundry-rs/forge-std@v1.9.1 solady-v0.0.292=Vectorized/solady@v0.0.292 openzeppelin-v0.4.7.3=openzeppelin/openzeppelin-contracts@v4.7.3 openzeppelin-v0.5.0.2=openzeppelin/openzeppelin-contracts@v5.0.2 || echo ''",
    "---------------------- DEV WORKFLOW ----------------------": "",
    "prepare": "rm -rf lib/ && set-defaults .vscode && forge install --no-git forge-std-v1.9.1=foundry-rs/forge-std@v1.9.1 solady-v0.0.292=Vectorized/solady@v0.0.292 openzeppelin-v0.4.7.3=openzeppelin/openzeppelin-contracts@v4.7.3 openzeppelin-v0.5.0.2=openzeppelin/openzeppelin-contracts@v5.0.2 || echo '' ",
    "build": "forge build",
    "clean": "rm -rf cache out",
    "test": "forge test"
  },
  "devDependencies": {
    "set-defaults": "^0.0.2"
  }
}
